<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".ActivityMainCommon">

    <TextView
        android:id="@+id/main_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/main_EDT_value"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter value"
        android:gravity="center"
        android:layout_centerInParent="true"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorButton"
        android:layout_below="@id/main_EDT_value"
        android:text="Submit"
        android:layout_centerHorizontal="true"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_BTN_submit"
        android:backgroundTint="@color/colorButton"
        android:text="Got to stats"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/main_LBL_deviceID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>